int main()
{
    int hour1,minute1,time;
    int hour,minute;
    while(~scanf("%d%d%d",&hour1,&minute1,&time))
    {
        minute=minute1+time;
        hour=hour1+minute/60;
        minute%=60;
        printf("现在是%d时%d分\n",hour,minute);
    }
    return 0;
}



//时间的转换   /60  or  %60
